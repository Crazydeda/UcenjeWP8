@{
  ViewData["Title"] = "Početna";
  var latest = (IEnumerable<FineSelections.Web.Models.Proizvod>)ViewBag.Latest;
  var collections = ViewBag.Collections as IEnumerable<dynamic>;
}
<div class="hero mb-4 rounded">
  <div class="container">
    <span class="badge-pill">PREMIUM SELEKCIJA</span>
    <h1 class="display-5 fw-bold mt-3">Najbolji izbor whisky, rum i gin</h1>
    <p class="lead">Inspirirano Ecuga stilom – brzo pronađi svoj omiljeni brend.</p>
    <a class="btn btn-light btn-lg" href="/Products">Kreni u kupnju</a>
  </div>
</div>

<div class="section-title"><span class="dot"></span><h3 class="m-0">Novo u ponudi</h3></div>
<div class="row row-cols-1 row-cols-md-4 g-3">
@foreach (var p in latest)
{
  <div class="col">
    <div class="card card-product h-100 shadow-sm">
      <img src="@p.slika" class="card-img-top" alt="@p.naziv" />
      <div class="card-body">
        <div class="small text-muted">@p.vrsta</div>
        <h6 class="card-title mt-1">@p.naziv</h6>
        <div class="fw-bold mb-2">@p.cijena.ToString("0.00") €</div>
        <a class="btn btn-sm btn-dark" href="/Products/Details/@p.ID_proizvoda">Detalji</a>
      </div>
    </div>
  </div>
}
</div>

<div class="section-title mt-4"><span class="dot"></span><h3 class="m-0">Kolekcije</h3></div>
<div class="row row-cols-1 row-cols-md-3 g-3">
@foreach (var c in collections)
{
  <div class="col">
    <a href="/Products?vrsta=@c.vrsta" class="text-decoration-none text-dark">
      <div class="card h-100 shadow-sm">
        <img src="@(c.sample?.slika ?? "/img/hero.jpg")" class="card-img-top" alt="@c.vrsta" style="height:200px; object-fit:cover;" />
        <div class="card-body d-flex justify-content-between align-items-center">
          <h5 class="m-0">@c.vrsta</h5>
          <span class="badge-pill">Vidi</span>
        </div>
      </div>
    </a>
  </div>
}
</div>

<div class="section-title mt-4"><span class="dot"></span><h3 class="m-0">Preporuke</h3></div>
<div class="row row-cols-1 row-cols-md-3 g-3">
  <div class="col"><div class="p-4 border rounded">Zašto volimo Tequilu? <div class="small text-muted">Istraži različite stilove i arome.</div></div></div>
  <div class="col"><div class="p-4 border rounded">Upoznajte Zacapa rum <div class="small text-muted">Kultni brend za specijalne prilike.</div></div></div>
  <div class="col"><div class="p-4 border rounded">Priča o agavi <div class="small text-muted">Kratki vodič kroz mezcal i tequilu.</div></div></div>
</div>
