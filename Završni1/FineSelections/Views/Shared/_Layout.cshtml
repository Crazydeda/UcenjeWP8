<!DOCTYPE html>
<html lang="hr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Fine Selections - @ViewData["Title"]</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark" style="background:#111827;">
  <div class="container">
    <a class="navbar-brand" href="/">Fine Selections</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav"><span class="navbar-toggler-icon"></span></button>
    <div id="nav" class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/Products">Katalog</a></li>
        <li class="nav-item"><a class="nav-link" href="/Cart">Košarica</a></li>
      </ul>
      <form class="d-flex" action="/Products">
        <input class="form-control form-control-sm me-2" type="search" name="q" placeholder="Pretraži...">
        <button class="btn btn-sm btn-outline-light">Traži</button>
      </form>
    </div>
  </div>
</nav>
<main class="container py-4">@RenderBody()</main>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-md-4 mb-3">
        <h5 class="text-light">Fine Selections</h5>
        <p class="small">Premium whisky, rum, gin i pokloni.</p>
      </div>
      <div class="col-md-4 mb-3">
        <h6 class="text-light">Kategorije</h6>
        <ul class="list-unstyled small">
          <li><a href="/Products?vrsta=Whisky">Whisky</a></li>
          <li><a href="/Products?vrsta=Gin">Gin</a></li>
          <li><a href="/Products?vrsta=Rum">Rum</a></li>
          <li><a href="/Products">Spirits & Liqueurs</a></li>
        </ul>
      </div>
      <div class="col-md-4 mb-3">
        <h6 class="text-light">Newsletter</h6>
        <form class="d-flex gap-2">
          <input class="form-control form-control-sm" placeholder="Vaš email" />
          <button class="btn btn-sm btn-outline-light" type="button">Prijavi se</button>
        </form>
        <div class="mt-3 small">Podržavamo plaćanje: VISA · Mastercard · Maestro</div>
      </div>
    </div>
  </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
