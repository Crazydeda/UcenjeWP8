
@model FineSelections.Models.Product
@{
    ViewData["Title"] = Model.Naziv;
}
<article class="details">
    <img src="@Model.Slika" alt="@Model.Naziv" onerror="this.src='/img/placeholder.jpg'" />
    <div>
        <h1>@Model.Naziv</h1>
        <p class="kind">@Model.Vrsta</p>
        <p class="desc">@Model.Opis</p>
        <p class="price">@Model.Cijena.ToString("C")</p>
        <form asp-controller="Cart" asp-action="Add" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit">Dodaj u ko≈°aricu</button>
        </form>
    </div>
</article>
