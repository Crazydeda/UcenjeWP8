
@model IEnumerable<FineSelections.Models.Product>
@{
    ViewData["Title"] = "Admin - Proizvodi";
}
<h1>Proizvodi</h1>
<p><a asp-action="Create" class="btn">+ Novi proizvod</a></p>
<table class="table">
    <thead><tr><th>ID</th><th>Naziv</th><th>Vrsta</th><th>Cijena</th><th>Zaliha</th><th></th></tr></thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Naziv</td>
            <td>@p.Vrsta</td>
            <td>@p.Cijena.ToString("C")</td>
            <td>@p.Zaliha</td>
            <td>
                <a asp-action="Edit" asp-route-id="@p.Id">Uredi</a> |
                <a asp-action="Delete" asp-route-id="@p.Id">Obri≈°i</a>
            </td>
        </tr>
    }
    </tbody>
</table>
