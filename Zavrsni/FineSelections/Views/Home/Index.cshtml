
@model IEnumerable<FineSelections.Models.Product>
@{
    ViewData["Title"] = "Premium žestoka pića";
    var vrste = (IEnumerable<string>)ViewBag.Vrste;
}
<section class="hero">
    <h1>Ručni odabir vrhunskih destilata</h1>
    <p>Istraži whisky, rum, gin i konjak – samo najfinije selekcije.</p>
</section>

<div class="filters">
    <div class="chips">
        <a asp-controller="Home" asp-action="Index" class="chip">Sve</a>
        @foreach (var v in vrste)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-vrsta="@v" class="chip">@v</a>
        }
    </div>
</div>

<div class="grid">
@foreach (var p in Model)
{
    <div class="card">
        <a asp-controller="Products" asp-action="Details" asp-route-id="@p.Id">
            <img src="@p.Slika" alt="@p.Naziv" onerror="this.src='/img/placeholder.jpg'" />
            <h3>@p.Naziv</h3>
        </a>
        <p class="desc">@p.Opis</p>
        <div class="row">
            <span class="price">@p.Cijena.ToString("C")</span>
            <form asp-controller="Cart" asp-action="Add" method="post">
                <input type="hidden" name="id" value="@p.Id" />
                <button type="submit">Dodaj</button>
            </form>
        </div>
    </div>
}
</div>
