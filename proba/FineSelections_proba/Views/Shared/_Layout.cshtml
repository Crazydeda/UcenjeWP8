@*
    Shared layout
*@
<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fine Selections</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="navbar">
        <div class="container">
            <a class="brand" asp-controller="Home" asp-action="Index">Fine Selections</a>
            <nav>
                <a asp-controller="Home" asp-action="Index">Proizvodi</a>
                <a asp-controller="Korisnici" asp-action="Create">Novi korisnik</a>
                <a asp-controller="Kosarica" asp-action="Index">Košarica</a>
                <a asp-controller="Narudzbe" asp-action="Index">Narudžbe</a>
            </nav>
        </div>
    </header>

    <main class="container content">
        @if (TempData["Msg"] != null)
        {
            <div class="alert">@TempData["Msg"]</div>
        }
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            © @DateTime.Now.Year Fine Selections
        </div>
    </footer>
</body>
</html>
