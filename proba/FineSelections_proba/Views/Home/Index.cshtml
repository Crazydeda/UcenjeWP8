@model IEnumerable<FineSelections.Models.Proizvod>
@{
    ViewData["Title"] = "Proizvodi";
}

<h1>Proizvodi @if (!string.IsNullOrWhiteSpace(ViewBag.Vrsta)) { <text>- @ViewBag.Vrsta</text> }</h1>

<div class="filters">
    <a class="chip" asp-action="Index" asp-route-vrsta="">Svi</a>
    <a class="chip" asp-action="Index" asp-route-vrsta="viski">Viski</a>
    <a class="chip" asp-action="Index" asp-route-vrsta="rum">Rum</a>
    <a class="chip" asp-action="Index" asp-route-vrsta="gin">Gin</a>
    <a class="chip" asp-action="Index" asp-route-vrsta="konjak">Konjak</a>
</div>

<div class="grid">
@foreach (var p in Model)
{
    <div class="card">
        <img src="@p.Slika" alt="@p.Naziv" onerror="this.style.display='none';" />
        <div class="card-body">
            <h3>@p.Naziv</h3>
            <p class="desc">@p.Opis</p>
            <div class="row">
                <span class="price">@p.Cijena.ToString("0.00") kn</span>
                <form asp-action="AddToCart" method="post">
                    <input type="hidden" name="id" value="@p.ID_proizvoda" />
                    <button class="btn">Dodaj</button>
                </form>
            </div>
        </div>
    </div>
}
</div>
